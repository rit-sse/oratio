<h1>Listing slideshows</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Visible</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @slideshows.each do |slideshow| %>
  <tr>
    <td><%= slideshow.name %></td>
    <td><%= slideshow.description %></td>
    <td><%= slideshow.visible %></td>
    <td><%= link_to 'Show', slideshow %></td>
    <td><%= link_to 'Edit', edit_slideshow_path(slideshow) %></td>
    <td><%= link_to 'Destroy', slideshow, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

